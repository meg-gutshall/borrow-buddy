<h1>Borrows</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Category</th>
      <th>Recipient</th>
      <th>No. Days Borrowed</th>
      <th>No. Reminders Sent</th>
      <th>Item Returned?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @borrows.each do |borrow| %>
      <tr>
        <td><%= borrow.item.name %></td>
        <td><%= borrow.item.category %></td>
        <td><%= borrow.recipient.name %></td>
        <td><%= borrow.days_borrowed %></td>
        <td><%= borrow.reminders_sent %></td>
        <td><%= borrow.returned %></td>
        <td><%= link_to 'Show', borrow %></td>
        <td><%= link_to 'Edit', edit_borrow_path(borrow) %></td>
        <td><%= link_to 'Destroy', borrow, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Borrow', new_borrow_path %>
